{
  "name": "exchange",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "immer": "^6.0.5",
    "node-sass": "4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-query": "^3.8.3",
    "react-scripts": "^3.4.4",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.0",
    "@types/lodash.isequal": "^4.5.5",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "fetch-mock": "^8.0.1",
    "husky": "^4.2.5",
    "jest-each": "^24.9.0",
    "lint-staged": "^10.2.2",
    "lodash.isequal": "^4.5.0",
    "node-fetch": "^2.6.1",
    "serve": "^11.2.0",
    "testaged-coverage": "^1.3.1",
    "whatwg-fetch": "^3.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test --coverage --watchAll=false",
    "test:file": "react-scripts test --findRelatedTests",
    "test:file:debug": "react-scripts --inspect-brk test --watch --no-cache --findRelatedTests",
    "build": "react-scripts build",
    "serve": "yarn build && serve build -l 3000 -s",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "testaged-coverage": "testaged-coverage"
  },
  "engines": {
    "node": "<=10.x"
  },
  "jest": {
    "collectCoverageFrom": [
      "!src/index.tsx",
      "src/**/*.tsx",
      "src/**/*.ts",
      "!src/store/state.ts",
      "!src/domain/rate.ts",
      "!src/react-app-env.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "testaged-coverage && lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
